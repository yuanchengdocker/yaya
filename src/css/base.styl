/*尾部*/
.footer
  width 100%
  height 100px
  background-color #f3f3f3
  .footer-main
    position relative
    width 100%
    height 100%
    margin 0 auto
    .footer-bottom
      text-align: center;
      width: 100%;
      font-size: 12px;
      color: #919dae;
      padding-top 42px
      p
