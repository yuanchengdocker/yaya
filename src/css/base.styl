/*banner*/
.banner
  border-bottom 1px solid #d2d2d2
  .swiper-container
    width 100%
    height 420px
    margin 0 auto
    .swiper-slide
      background-color #fff
      width 100%
      position relative
      overflow hidden
      height 420px
      a
        img
          height 100%
          width auto
          margin 0 auto
          display block
          position absolute
         
    .pagination
      position absolute
      height 25px
      width auto
      bottom 30px
      left 70%
      text-align center
      span
        display inline-block
        width 14px 
        height 14px
        border-radius 50%
        border 1px solid #fff
        background-color #bfbfbf
        margin 0 6px
        cursor default
      .swiper-active-switch
        border-color #535353
        background-color #fff


/*分页*/
.tcdPageCode
  padding 15px 20px
  text-align center
  color #919095
  font-size 14px
  margin-top 25px
  a
    display inline-block
    color #919095
    display inline-block
    height 40px
    line-height 40px
    padding 0 15px
    border 1px solid #dcdcdc
    background-color #fbfbfb
    margin 0 10px
    border-radius 4px
    vertical-align middle
    text-decoration none
  a:hover
    text-decoration none
    border 1px solid #428bca
  span.current
    display inline-block
    height 40px
    line-height 40px
    padding 0 15px
    margin 0 10px
    color #fff
    background-color #25aaf1
    border 1px solid #428bca
    border-radius 4px
    vertical-align middle
  span.disabled
    display inline-block
    height 40px
    line-height 40px
    padding 0 15px
    margin 0 10px
    color #bfbfbf
    background #f2f2f2
    border 1px solid #bfbfbf
    border-radius 4px
    vertical-align middle

  
